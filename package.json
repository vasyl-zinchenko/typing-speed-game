{
    "name": "typing-speed-game",
    "version": "2.0.0",
    "description": "Typing speed game",
    "type": "module",
    "engines": {
        "node": ">=20.x.x",
        "npm": ">=10.x.x"
    },
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "tsx watch server/server.ts",
        "dev:client": "vite --config vite.config.ts",
        "build": "npm run build:server && npm run build:client",
        "build:server": "tsc",
        "build:client": "vite build --config vite.config.ts",
        "start": "NODE_ENV=production node build/server.js",
        "format:check": "prettier --check \"**/*.{ts,css,md,html}\"",
        "format:fix": "prettier --write \"**/*.{ts,css,md,html}\""
    },
    "keywords": [
        "bsa",
        "homework"
    ],
    "license": "ISC",
    "dependencies": {
        "express": "^5.0.1",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.5",
        "concurrently": "^9.2.1",
        "prettier": "^3.4.2",
        "socket.io-client": "^4.8.3",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "vite": "^7.3.1"
    }
}
